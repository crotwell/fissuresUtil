  <build>
    <nagEmailAddress>crotwell@seis.sc.edu</nagEmailAddress>
    <unitTestSourceDirectory>tests</unitTestSourceDirectory>
<!-- Unit test cases -->
    <unitTest>
      <includes>
        <include>**/*Test.java</include>
      </includes>
      <resources>
	<resource>
  	  <directory>tests/edu/sc/seis/fissuresUtil/database/event</directory>
          <targetPath>edu/sc/seis/fissuresUtil/database/event/</targetPath>
          <includes>
	    <include>*.props</include>
          </includes>
        </resource>
      </resources>
    </unitTest>
    <sourceDirectory>src</sourceDirectory>
    <resources>
      <resource>
	<directory>src/edu/sc/seis/fissuresUtil/database/props</directory>
	<targetPath>edu/sc/seis/fissuresUtil/database/props</targetPath>
	<includes>
	  <include>*.props</include>
	</includes>
      </resource>
      <resource>
        <directory>src/edu/sc/seis/fissuresUtil/chooser</directory>
        <targetPath>edu/sc/seis/fissuresUtil/chooser</targetPath>
        <includes>
          <include>ChannelChooser.properties</include>
        </includes>
      </resource>
      <resource>
        <directory>src/edu/sc/seis/fissuresUtil/data</directory>
        <targetPath>edu/sc/seis/fissuresUtil/data</targetPath>
        <includes>
          <include>**</include>
        </includes>
      </resource>
      <resource>
        <directory>src/edu/sc/seis/fissuresUtil/display</directory>
        <targetPath>edu/sc/seis/fissuresUtil/display</targetPath>
        <includes>
          <include>*.prop</include>
        </includes>
      </resource>
    </resources>
  </build>
